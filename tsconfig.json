{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "hardhat",
            "chai",
            "mocha",
            "node",
            "@nomicfoundation/hardhat-ethers",
            "@nomicfoundation/hardhat-chai-matchers"
        ],
