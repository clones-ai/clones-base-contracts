{
    "name": "clones-base-contracts",
    "version": "1.0.0",
    "private": true,
    "description": "CLONES project smart contracts for Base (L2). Hardhat 2 + Ethers v6 + OpenZeppelin v5.",
    "license": "MIT",
    "scripts": {
        "build": "hardhat compile",
        "clean": "hardhat clean",
        "test": "hardhat test",
        "coverage": "hardhat coverage",
        "lint:sol": "solhint 'contracts/**/*.sol'",
        "deploy:base": "hardhat run scripts/deploy.ts --network base",
        "deploy:baseSepolia": "hardhat run scripts/deploy.ts --network baseSepolia",
        "deploy:upgradeable:base": "hardhat run scripts/deploy-upgradeable.ts --network base",
        "deploy:upgradeable:baseSepolia": "hardhat run scripts/deploy-upgradeable.ts --network baseSepolia",
        "verify": "ts-node scripts/verify.ts",
        "verify:base": "ts-node scripts/verify.ts --network base",
        "verify:baseSepolia": "ts-node scripts/verify.ts --network baseSepolia",
        "upgrade": "hardhat run scripts/upgrade.ts"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
        "@nomicfoundation/hardhat-ethers": "^3.1.0",
        "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
        "@nomicfoundation/hardhat-toolbox": "^6.1.0",
        "@nomicfoundation/hardhat-verify": "^2.0.14",
        "@typechain/ethers-v6": "^0.5.1",
        "@typechain/hardhat": "^9.1.0",
        "@types/chai": "^4.3.16",
        "@types/mocha": "^10.0.6",
        "chai": "^4.4.1",
        "hardhat": "^2.26.0",
        "hardhat-gas-reporter": "^2.2.0",
        "solhint": "^6.0.0",
        "solhint-plugin-prettier": "^0.1.0",
        "solidity-coverage": "^0.8.16",
        "ts-node": "^10.9.2",
        "typechain": "^8.3.2",
        "typescript": "^5.5.4"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^5.4.0",
        "@openzeppelin/contracts-upgradeable": "^5.4.0",
        "@openzeppelin/hardhat-upgrades": "^3.9.1",
        "dotenv": "^17.2.1",
        "ethers": "^6.13.0"
    }
}
